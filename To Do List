<body>
    <div class="title">
        <h1>To-Do List</h1>
        <img src="todolist.jpeg" alt="To list width= "50" height="50">
    </div>

    <div class="container">
        <form id="todoForm">
            <input type="text" id="todoInput" placeholder="Enter a new task">
            <button type="submit">Add Task</button>
        </form>
        <ul id="todoList">
            <!-- To-do items will be added here -->
        </ul>
    </div>

    <div class="note-sticker">
        <h2>My To-Do List</h2>
        <ul id="noteList">
            <!-- To-do items will be added here -->
        </ul>
    </div>

    <script>
        document.getElementById('todoForm').addEventListener('submit', function(event) {
            event.preventDefault();
            var todoInput = document.getElementById('todoInput');
            var todoList = document.getElementById('todoList');
            
            if (todoInput.value.trim() === '') {
                alert('Please enter a task!');
                return;
            }
            
            var li = document.createElement('li');
            li.textContent = todoInput.value;
            li.className = 'item';
            
            var deleteButton = document.createElement('button');
            deleteButton.textContent = '❌';
            deleteButton.className = 'delete-button';
            deleteButton.addEventListener('click', function() {
                li.remove();
            });
            
            var completeButton = document.createElement('button');
            completeButton.textContent = '✓';
            completeButton.addEventListener('click', function() {
                li.classList.toggle('completed');
            });

            li.appendChild(completeButton);
            li.appendChild(deleteButton);
            todoList.appendChild(li);
            
            // Add to note sticker
            var noteLi = document.createElement('li');
            noteLi.textContent = todoInput.value;
            document.getElementById('noteList').appendChild(noteLi);
            
            todoInput.value = '';
        });
    </script>
</body>
</html>
